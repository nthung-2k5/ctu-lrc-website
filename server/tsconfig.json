{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "#*": [
        "./app/*",
        "./app/*.ts",
        "./app/*.js",
        "./app/*/index.ts",
        "./app/*/index.js"
      ]
    }
  },
  "include": [
    "app/**/*",
    "server.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}